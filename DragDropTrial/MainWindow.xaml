<Window x:Class="DragDropTrial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DragDropTrial"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="panelA"
                    Grid.Column="0"
                    Background="Beige"
                    AllowDrop="True"
                    DragOver="panel_DragOver"
                    Drop="panel_Drop">
            <TextBox Width="Auto" Margin="2"
                     Text="green" />
            <Canvas x:Name="canvasA">
                <local:Circle Margin="2" />
                <local:Circle Margin="2" />
            </Canvas>
        </StackPanel>
        <StackPanel x:Name="panelB"
                    Grid.Column="1"
                    Background="Bisque"
                    AllowDrop="True"
                    DragOver="panel_DragOver"
                    Drop="panel_Drop">
            <Canvas x:Name="canvasB">
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
